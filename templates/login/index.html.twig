{% extends 'base.html.twig' %}
{%  set bodyClass = 'login' %}
{% block title %}Mopar Mon Plan d'Action Commerciale!{% endblock %}

{% block body %}

    <div class="container">
        <div class="content">
            <div class="columns">
                <div class="column is-4 is-offset-4">
                    <img class="" src="{{ asset('build/images/logo-258x54@2x.png') }}" width="258" alt="Mon Plan d'actions commerciales">
                    <form action="{{ path('app_login') }}" method="post">
                        {% if error %}
                            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}

                        <div class="row flex">
                            <div class="input-field">
                                <label for="inputEmail" class="sr-only">Email</label>
                                <input type="text" id="username" name="_username" value="{{ last_username }}" required autofocus>
                            </div>

                            <div class="input-field">
                                <label for="inputPassword" class="sr-only">Mot de passe</label>
                                <input type="password" id="password" name="_password" class="form-control"  required>
                            </div>
                        </div>

                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                        <div class="row">
                            <div class="col s6 left-align">
                                <label>
                                    <input type="checkbox" name="_remember_me" checked/>
                                    <span><small>Rester connecté</small></span>
                                </label>
                            </div>
                            <div class="col s6 right-align">
                                <a href="{{ path('app_forgot_password_request') }}"><small>Mot de passe oublié</small></a>
                            </div>
                        </div>
                        <div class="center">
                            <button class="" type="submit">
                                Connexion
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>


{% endblock %}
