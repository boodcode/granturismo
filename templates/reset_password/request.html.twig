{% extends 'base.html.twig' %}
{%  set bodyClass = 'resetpassword' %}
{% block title %}Réinitialisation du mot de passe{% endblock %}

{% block body %}
    <div class="container">
        <div class="content">
            {% for flash_error in app.flashes('reset_password_error') %}
                <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
            {% endfor %}
            <h1>Réinitialisation du mot de passe</h1>

            {{ form_start(requestForm) }}
            {{ form_row(requestForm.email) }}
            <div>
                <small>
                    Entrer votre adresse email et nous vous enverrons un lien<br>
                    afin de créer un nouveau mot de passe.

                </small>
            </div>

            <button class="btn btn-primary">Envoyer le mail de réinitialisation</button>
            {{ form_end(requestForm) }}
        </div>
    </div>

{% endblock %}


